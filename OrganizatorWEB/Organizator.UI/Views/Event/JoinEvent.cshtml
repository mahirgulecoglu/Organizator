@model Organizator.Entity.EventPeople
@using Organizator.BLL
@using Organizator.Entity
@{
    int totalperson=0;
    Event events = new Event();
    if (Session["ID"] != null)
    {
        EventBLL eventBLL = new EventBLL();
        events = eventBLL.EventDetail((int)Session["ID"]);
        totalperson = eventBLL.TotalPerson((int)Session["ID"]);
    }
    int id = events.Subscribers - totalperson;
}

<div class="modal" id="myModalJoin">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Modal Heading</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("JoinEvent", "Event", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.Label("TotalPerson", "Number of Seat")
                        @Html.TextBoxFor(x => x.TotalPerson, new { @class = "form-control", type = "number", min = "1", max = id, style = "height:40px; width:75px" })
                    </div>
                    <button type="submit" class="btn btn-primary">SET</button>
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
                }
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
